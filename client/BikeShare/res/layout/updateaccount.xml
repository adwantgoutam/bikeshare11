<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dip"
		  android:background="@drawable/bikeshape">

          
	<!--  User Name  -->
    <TextView 
        android:id="@+id/uname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#372c24"
        android:text="@+id/uname"/>
    

    
    <!--  Email  -->
    <TextView
        android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:singleLine="true"
        android:text="Email" />
    <EditText 
        android:id="@+id/email1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:singleLine="true"
        android:text="@+id/email1"
		
        android:textColorHint="#7C7B7C"
		android:layout_marginTop="14dp"
        android:layout_marginBottom="4dp"
		/>
    
    <!--  Password  -->
    <TextView
        android:id="@+id/paswd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:singleLine="true"
        android:text="Password" />
    <EditText 
        android:id="@+id/paswd1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="20dip"
        android:singleLine="true"
        android:text="@+id/paswd1"
		android:textColorHint="#7C7B7C"
		/>
    
    <!--  Mobile Number  -->
    <TextView
        android:id="@+id/mobile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:singleLine="true"
        android:text="Mobile Number" />
    <EditText 
        android:id="@+id/mobile1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="20dip"
        android:singleLine="true"
        android:text="@+id/mobile1"
		android:textColorHint="#7C7B7C"/>
    

     

    
    <!--  SSN  -->
    <TextView
        android:id="@+id/ssn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:singleLine="true"
        android:text="SSN" />
    <EditText 
        android:id="@+id/ssn1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="20dip"
        android:singleLine="true"
        android:text="@+id/ssn1"
		android:textColorHint="#7C7B7C"/>
    
    
    <!-- update button -->
	<Button
        android:id="@+id/update"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Update" 
		android:background="@drawable/buttonshape"/>
	
</LinearLayout>